<%- include('partials/header') %>

    <!-- Hero Section -->
    <div class="hero-bg h-screen flex items-center justify-center text-center relative">
        <div class="absolute inset-0 bg-black opacity-50"></div>
        <div class="text-white px-4 relative z-10">
            <h1 class="text-5xl font-bold mb-4">Choose Life, Not Drugs</h1>
            <p class="text-xl mb-8">Empowering Haramaya University youth to make healthy choices and build a drug-free future.</p>
            <a href="/auth/register" class="bg-teal-500 hover:bg-teal-700 text-white font-bold py-3 px-6 rounded-full transition duration-300 mr-4">Join the Club</a>
            <a href="/about" class="bg-transparent border-2 border-white hover:bg-white hover:text-teal-600 text-white font-bold py-3 px-6 rounded-full transition duration-300">Learn More</a>
        </div>
    </div>

    <!-- Mission Section -->
    <div class="container mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">Our Mission</h2>
        <div class="flex flex-wrap -mx-4">
            <div class="w-full md:w-1/3 px-4 mb-8">
                <a href="/resources" class="block h-full group">
                    <div class="bg-white rounded-lg shadow-lg p-6 text-center h-full transform group-hover:-translate-y-1 transition duration-300 border border-transparent group-hover:border-teal-100">
                        <div class="text-teal-500 text-4xl mb-4"><i class="fas fa-book-open"></i></div>
                        <h3 class="text-xl font-bold mb-2 group-hover:text-teal-600">Education</h3>
                        <p class="text-gray-600">Providing accurate information about the dangers of Chat, Alcohol, and Tobacco.</p>
                    </div>
                </a>
            </div>
            <div class="w-full md:w-1/3 px-4 mb-8">
                <a href="/about" class="block h-full group">
                    <div class="bg-white rounded-lg shadow-lg p-6 text-center h-full transform group-hover:-translate-y-1 transition duration-300 border border-transparent group-hover:border-teal-100">
                        <div class="text-teal-500 text-4xl mb-4"><i class="fas fa-users"></i></div>
                        <h3 class="text-xl font-bold mb-2 group-hover:text-teal-600">Community</h3>
                        <p class="text-gray-600">Building a supportive network of peers and mentors to encourage healthy lifestyles.</p>
                    </div>
                </a>
            </div>
            <div class="w-full md:w-1/3 px-4 mb-8">
                <a href="/get-help" class="block h-full group">
                    <div class="bg-white rounded-lg shadow-lg p-6 text-center h-full transform group-hover:-translate-y-1 transition duration-300 border border-transparent group-hover:border-teal-100">
                        <div class="text-teal-500 text-4xl mb-4"><i class="fas fa-hand-holding-heart"></i></div>
                        <h3 class="text-xl font-bold mb-2 group-hover:text-teal-600">Support</h3>
                        <p class="text-gray-600">Offering resources and guidance for those seeking help or wanting to help others.</p>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Latest Events & News -->
    <div class="bg-gray-100 py-16">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap -mx-4">
                <!-- Events -->
                <div class="w-full md:w-1/2 px-4 mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Upcoming Events</h2>
                    <% if(events.length > 0) { %>
                        <div class="space-y-4">
                            <% events.forEach(function(event) { %>
                                <div class="bg-white p-4 rounded shadow flex">
                                    <div class="bg-teal-100 text-teal-800 p-3 rounded text-center min-w-[80px]">
                                        <span class="block text-xl font-bold"><%= new Date(event.date_time).getDate() %></span>
                                        <span class="block text-sm"><%= new Date(event.date_time).toLocaleString('default', { month: 'short' }) %></span>
                                    </div>
                                    <div class="ml-4">
                                        <h3 class="font-bold text-lg"><%= event.title %></h3>
                                        <p class="text-gray-600 text-sm"><i class="fas fa-map-marker-alt mr-1"></i> <%= event.venue %></p>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-600">No upcoming events scheduled.</p>
                    <% } %>
                    <a href="/events" class="inline-block mt-4 text-teal-600 font-bold hover:underline">View All Events &rarr;</a>
                </div>

                <!-- News -->
                <div class="w-full md:w-1/2 px-4 mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Latest News</h2>
                    <% if(posts.length > 0) { %>
                        <div class="space-y-4">
                            <% posts.forEach(function(post) { %>
                                <div class="bg-white p-4 rounded shadow">
                                    <span class="text-xs font-bold text-teal-600 uppercase"><%= post.category %></span>
                                    <h3 class="font-bold text-lg"><a href="#" class="hover:text-teal-600"><%= post.title %></a></h3>
                                    <p class="text-gray-600 text-sm mt-1"><%= post.content.substring(0, 100) %>...</p>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-600">No news posts yet.</p>
                    <% } %>
                    <a href="/blog" class="inline-block mt-4 text-teal-600 font-bold hover:underline">Read Blog &rarr;</a>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer') %>
